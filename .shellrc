#!/usr/bin/env bash

###########
# Functions
###########

# ipaddr = Show IP address
function ipaddr {
	if command -v ip >/dev/null; then
		ip route show dev eth0 | tail -1 | awk '{print $NF}'
	elif command -v ipconfig >/dev/null; then
		ipconfig getifaddr en0
	else
		echo "Cannot get IP address; neither ip nor ipconfig are installed."
	fi
}

# A non-interactive broot (a better tree)
function tree {
	broot -c :pt "$@"
}

# fzfhx = Use fzf to open files in Helix
function fzfhx {
	result=$(rg --hidden -l "" | fzf --preview 'bat --style=numbers --color=always --line-range :500 {}')
	if [ -z "${result}" ]; then
		# echo "No file selected"
		true
	else
		$EDITOR "${result}"
	fi
}

# ide = Launch "ide": Named tmux session
# Optional argument: A path to cd into
function ide {
	# Change directory if requested
	if [ -n "$1" ]; then
		cd "$1" || return
	fi

	# Generate session name
	SESSION=${PWD##*/}                                  # Current directory basename
	SESSION=${SESSION//./_}                             # Replace illegal characters for tmux session names
	if tmux has-session -t "$SESSION" 2>/dev/null; then # If session already exists, append a counter
		COUNTER=2
		SESSION_WITH_SUFFIX="$SESSION-$COUNTER"
		while tmux has-session -t "$SESSION_WITH_SUFFIX" 2>/dev/null; do
			COUNTER=$((COUNTER + 1))
			SESSION_WITH_SUFFIX="$SESSION-$COUNTER"
		done
		SESSION="$SESSION_WITH_SUFFIX"
	fi

	# Create new tmux session
	tmux new-session -s "$SESSION"
}

#########
# Aliases
#########

# Short aliases
alias t='tmux'
alias h='hx'
alias g='git'
alias f='fzfhx'
alias b='broot'
alias i='ide'

# Replace ls with exa
if command -v exa >/dev/null; then
	alias l='exa'
	alias ls='exa'
	alias la='exa -a'
	alias ll='exa -l'
	alias lla='exa -la'
fi

# Aliases to set defaults
alias less='less -R'
alias rg='rg --pretty'
alias dust='dust -r'
alias watchexec='watchexec --project-origin .'

# Other helpful/memorable aliases
alias first='head -1'
alias last='tail -1'
alias hex='hecate'

# Alias: ports
if command -v ss >/dev/null; then
	alias ports='sudo ss -ltpn'
elif command -v lsof >/dev/null; then
	alias ports='sudo lsof -PiTCP -sTCP:LISTEN'
fi

################
# Local settings
################

if [ -f "$HOME/.shellrc_local" ]; then
	source "$HOME/.shellrc_local"
fi
