[user]
    name = Jeremy Brudvik
    email = jeremy@brudvik.me
[alias]
    # Short aliases
    s = status -s
    d = diff
    l = log --pretty=format:\"%C(auto)%h%d %C(white)%s %C(blue)[%ad] %C(magenta)<%an>\" --date=relative
    f = fetch
    p = pull
    a = add
    c = commit -v
    co = checkout
    b = rev-parse --abbrev-ref HEAD
    g = grep

    # Helpers for viewing local vs remote branch changes:
    # - m (mine): in local only
    # - t (theirs): in remote only
    m = "!echo HEAD ^origin/$(git b)"
    t = "!echo origin/$(git b) ^HEAD"
    dm = "!git d $(git m)"
    dt = "!git d $(git t)"
    lm = "!git l $(git m)"
    lt = "!git l $(git t)"

    # Quicker ways to add -p, --stat, --staged
    ds = diff --staged
    ap = add -p . # My most common way to add
    lp = "!git l -p"
    ls = "!git l --stat"
[log]
    decorate
	date = local
[push]
    default = current
[core]
    excludesfile = ~/.gitignore_global
    pager = "f() { if [ $(tput cols) -ge 140 ]; then "delta --side-by-side"; else "delta"; fi }; f"
[pull]
    ff = only
[init]
    defaultBranch = main
[interactive]
    diffFilter = delta --color-only
[delta]
    light = false
    navigate = true # use n and N to move between diff sections
    line-numbers = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
