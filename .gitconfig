[user]
    name = Jeremy Brudvik
    email = jeremy@brudvik.me
[alias]
    # Frequently-used modifiers:
    # -p
    # --stat
    # --staged
    # --graph
    # --reverse
    # --amend

    # Short aliases
    s = status -s
    ss = status
    l = log --pretty=format:\"%C(auto)%h%d %C(white)%s %C(blue)[%ad] %C(magenta)<%an>\" --date=relative
    ll = log --stat
    d = diff
    f = fetch
    a = add
    ap = add -p
    c = commit -v
    co = checkout
    b = branch -vv
    g = grep

    # Helpers for viewing local vs remote changes
    # - mine: in local branch but not "other"
    # - theirs: in "other" but not local branch
    current-branch = rev-parse --abbrev-ref HEAD
    other = "!if $(git log origin/$(git current-branch) &> /dev/null); then echo origin/$(git current-branch); else echo $(git symbolic-ref --short HEAD); fi"
    mine = "!echo HEAD ^origin/$(git current-branch)"
    theirs = "!echo origin/$(git current-branch) ^HEAD"

    # Short aliases using mine/theirs
    lm = "!git l $(git mine)"
    lt = "!git l $(git theirs)"
    llm = "!git ll $(git mine)"
    llt = "!git ll $(git theirs)"
    dm = "!git d $(git mine)"
    dt = "!git d $(git theirs)"
[log]
    decorate
	date = local
[push]
    default = current
[core]
    excludesfile = ~/.gitignore_global
    pager = "f() { if [ $(tput cols) -ge 140 ]; then "delta --side-by-side"; else "delta"; fi }; f"
[pull]
    ff = only
[init]
    defaultBranch = main
[interactive]
    diffFilter = delta --color-only
[delta]
    light = false
    navigate = true # use n and N to move between diff sections
    line-numbers = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
