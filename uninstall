#!/usr/bin/env bash

rm_if_link(){ [ ! -L "$1" ] || rm -v "$1"; }

# zsh (+ bash)
rm_if_link "$HOME/.zshrc"
rm_if_link "$HOME/.zsh_config"
rm_if_link "$HOME/.zsh_aliases"
rm_if_link "$HOME/.bashrc"
rm_if_link "$HOME/.bash_profile"
rm_if_link "$HOME/.hushlogin"
rm -rf "$HOME/.oh-my-zsh"

# git
rm_if_link "$HOME/.gitconfig"
rm_if_link "$HOME/.gitignore_global"

# vim
rm_if_link "$HOME/.vimrc"
rm -rf "$HOME/.vim/bundle/Vundle.vim"
