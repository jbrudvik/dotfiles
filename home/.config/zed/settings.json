// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "base_keymap": "VSCode",
  "vim_mode": true,

  // Fonts
  "ui_font_size": 14,
  "buffer_font_size": 13,
  "buffer_font_features": {
    "calt": false // Disable ligatures
  },

  // Theme
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "color": "#788797" // Match Ayu Dark comment color on docs.rs (less harsh than Zed's version): https://github.com/rust-lang/docs.rs/blob/master/templates/style/_syntax-themes.scss
      }
    }
  },

  // Editor
  "soft_wrap": "editor_width",
  "inlay_hints": {
    "enabled": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  // Terminal
  "terminal": {
    "line_height": "standard"
  },

  // AI
  "features": {
    "edit_prediction_provider": "none"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },

  // Hide UI for unwanted features
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "show_user_picture": false,

  // Language overrides
  "languages": {
    "Haskell": {
      "tab_size": 2,
      "edit_predictions_disabled_in": ["string", "comment"]
    }
  }
}
